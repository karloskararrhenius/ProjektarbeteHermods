@model IEnumerable<ProjektHermods.Models.Ingrediens>

@{
    ViewBag.Title="Receptjakt";
}

<h2>Receptjakt</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-xs-12 col-sm-12">
            <h1 class="text">Välkommen till ReceptTips.se</h1>
            <p class="lead">Sök på vad du <u>har</u> hemma</p>
        </div>
        <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 note" style="color:black;">
@using(Html.BeginForm("Testing", "Search", FormMethod.Get)) { 
            <div id="selected"><p class="note-text" style="display:block;visibility:hidden;">Dina Ingredienser</p>

          


            </div><input type="submit" />}
            <div id="testing" style="display:none;">
                <p> Innehåller redan<p>
            </div>
            <div>
                
            </div>

        </div>

    </div>
</div>
<div class="container ingredients-div">
    <div class="row margin-top-45">
    <div class="col-xs-5 col-sm-5 ">

            <label class="control-label">Skriv in dina ingredienser<br />
            </label><p>Skriv * för att se alla ingredienser som finns i våra recept</p>

                <div id="nonSelectedT">
                    <input type="text" id="SearchText" />
                    <input type="button" id="addtoNote" onclick="copy()" value="Add" />
                </div>
        
    </div>
    <div class="col-md-7 col-sm-7 col-xs-7">
        @using(ReceptTipsContext context = new ReceptTipsContext())
            {

            <input type="button" id="Kött-open-button-1" class=" btn-danger Kött-button Kött-open-button-1" value="Ingredienser">
            <input type="button" id="Grönsaker-open-button-1" class="btn-danger Grönsaker-open-button-1" value="x">
            <div style="display: none" id="nonSelected" class="Kött-div-1 div-1">
               @foreach(var item in context.Ingrediens)
                   { 
                    <input id="btnDanger" data-Id="@item.Name" onclick="moveButton(this)" type="button" class="btn-danger ingrediens-item" value=@item.Name>
                    } 
            </div>
            }
      
        </div>
    </div>

</div>

